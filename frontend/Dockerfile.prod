# Frontend Production Dockerfile-production
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Command to copy build files (will be mounted to host)
CMD ["cp", "-r", "/app/dist/.", "/app/dist/"]
